<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/profile_editor_label_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/profile_editor_label_ti"
            android:layout_gravity="center" android:layout_margin="5dp" android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/profile_editor_selected_location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="extractLocalPlaces"
            android:layout_marginTop="10dp"
            android:text="STUBBED: LOCATION LABEL"
            />

    <TextView
            android:id="@+id/profile_editor_selected_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="extractLocalPlaces"
            android:layout_marginTop="10dp"
            android:text="STUBBED: LOCATION LABEL"
            />

</LinearLayout>